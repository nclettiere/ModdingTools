{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "dev-common",
      "hidden": true,
      "inherits": ["dev-mode", "vcpkg"],
      "cacheVariables": {
        "BUILD_MCSS_DOCS": "ON"
      }
    },
    {
      "name": "rel-common",
      "hidden": true,
      "inherits": ["rel-mode", "vcpkg"],
      "cacheVariables": {
        "BUILD_MCSS_DOCS": "OFF"
      }
    },
    {
      "name": "dev-linux",
      "binaryDir": "${sourceDir}/build/dev-linux",
      "inherits": ["dev-common", "ci-linux"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "rel-linux",
      "binaryDir": "${sourceDir}/build/rel-linux",
      "inherits": ["rel-common", "ci-linux-rel"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "OFF"
      }
    },
    {
      "name": "dev-darwin",
      "binaryDir": "${sourceDir}/build/dev-darwin",
      "inherits": ["dev-common", "ci-darwin"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "dev-win64",
      "binaryDir": "${sourceDir}/build/dev-win64",
      "inherits": ["dev-common", "win-ninja-clang-dev", "vcpkg-mingw-static"],
      "environment": {
        "UseMultiToolTask": "true",
        "EnforceProcessCountAcrossBuilds": "true"
      }
    },
    {
      "name": "rel-win64",
      "binaryDir": "${sourceDir}/build/rel-win64",
      "inherits": ["rel-common", "win-ninja-clang-rel", "vcpkg-mingw-static"],
      "environment": {
        "UseMultiToolTask": "true",
        "EnforceProcessCountAcrossBuilds": "true"
      }
    },
    {
      "name": "dev",
      "binaryDir": "${sourceDir}/build/dev",
      "inherits": "dev-win64"
    },
    {
      "name": "rel",
      "binaryDir": "${sourceDir}/build/rel",
      "inherits": "rel-win64"
    },
    {
      "name": "dev-linux",
      "binaryDir": "${sourceDir}/build/dev-linux",
      "inherits": "dev-linux"
    },
    {
      "name": "rel-linux",
      "binaryDir": "${sourceDir}/build/rel-linux",
      "inherits": "rel-linux"
    },
    {
      "name": "dev-coverage",
      "binaryDir": "${sourceDir}/build/coverage",
      "inherits": ["dev-mode", "coverage-linux", "vcpkg"]
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "configurePreset": "dev",
      "configuration": "Debug",
      "jobs": 20
    },
    {
      "name": "rel",
      "configurePreset": "rel",
      "configuration": "MinSizeRel",
      "jobs": 20
    },
    {
      "name": "dev-linux",
      "configurePreset": "dev-linux",
      "configuration": "Debug",
      "jobs": 20
    },
    {
      "name": "rel-linux",
      "configurePreset": "rel-linux",
      "configuration": "MinSizeRel",
      "jobs": 20
    }
  ],
  "testPresets": [
    {
      "name": "dev",
      "configurePreset": "dev",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "jobs": 20,
        "noTestsAction": "error"
      }
    }
  ]
}
